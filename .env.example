# Server
PORT=8081
HOST=127.0.0.1

# API token validation (delegated token from frontend)
AZURE_TENANT_ID=REPLACE_WITH_TENANT_ID
AZURE_API_AUDIENCE=api://REPLACE_WITH_API_APP_ID_URI
AZURE_API_CLIENT_ID=REPLACE_WITH_API_APP_CLIENT_ID
AZURE_REQUIRED_SCOPE=client.read

# Graph app-only client (used by /api/clients and /api/marketing/photos to read SharePoint lists)
AZURE_API_CLIENT_SECRET=REPLACE_WITH_API_APP_CLIENT_SECRET
SHAREPOINT_SITE_URL=https://planwithcare.sharepoint.com/sites/SupportTeam
SHAREPOINT_CLIENTS_LIST_NAME=Clients - One Touch
SHAREPOINT_MARKETING_PHOTOS_LIST_NAME=Photos and Lists

# OneTouch API (used by /api/clients and /api/carers)
ONETOUCH_BASE_URL=https://api-uk.onetouchhealth.net/connect/c2/v1
ONETOUCH_USERNAME=REPLACE_WITH_USERNAME
ONETOUCH_PASSWORD=REPLACE_WITH_PASSWORD
ONETOUCH_CLIENTS_TIMEOUT_MS=12000
ONETOUCH_CARERS_TIMEOUT_MS=12000
ONETOUCH_VISITS_TIMEOUT_MS=6000
ONETOUCH_CARERS_VISITS_TIMEOUT_MS=1200

# Optional local data fallback flags
USE_LOCAL_CLIENTS_FALLBACK=0
ALLOW_LOCAL_CLIENTS_ON_GRAPH_ERROR=0
CLIENTS_DATA_FILE=./data/clients.json

# Google Maps Platform (used by /api/routes/run)
GOOGLE_MAPS_API_KEY=REPLACE_WITH_GOOGLE_MAPS_API_KEY
GOOGLE_MAPS_REGION=gb

# Time mapping costing
# If MAX_DISTANCE is set (miles), costing uses distance threshold.
# If MAX_DISTANCE is empty and MAX_TIME is set (minutes), costing uses time threshold.
MAX_DISTANCE=
MAX_TIME=
TRAVEL_PAY=
PER_MILE=
